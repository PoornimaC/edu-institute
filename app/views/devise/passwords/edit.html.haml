.page-header
  %h3=t 'Change your password'
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form form-horizontal" }) do |f|
  .form-group
    = f.label :reset_password_token, class: 'control-label col-lg-2'
    .col-lg-10
      = f.input :reset_password_token, as: :hidden, class: 'form-control'
    = f.error_span(:reset_password_token)
  .form-group
    = f.label "New password", class: 'control-label col-lg-2'
    .col-lg-10
      = f.password_field :password, class: 'form-control', required: true, autofocus: true
    = f.error_span(:password)
  .form-group
    = f.label "Confirm your new password", class: 'control-label col-lg-2'
    .col-lg-10
      = f.password_field :password_confirmation,class: 'form-control', required: true
    = f.error_span(:password_confirmation)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.button :submit, "Change my password", class: 'btn btn-primary'
= render "devise/shared/links"