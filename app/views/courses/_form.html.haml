= simple_form_for @course, html: { class: "form form-horizontal course" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :description, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_area :description, class: 'form-control', required: true
    = f.error_span(:description)
  .form-group
    = f.label :status, class: 'control-label col-lg-2'
    .col-lg-10
      = f.select :status, EduInsConstants::STATUS_MAPPING, class: 'form-control', required: true
    = f.error_span(:status)
  .form-group
    = f.label :duration_in_months, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :duration_in_months, class: 'form-control', required: true
    = f.error_span(:duration_in_months)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), courses_path, :class => 'btn btn-default'
